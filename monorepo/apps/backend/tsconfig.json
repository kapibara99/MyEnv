{
  "extends": "../../tsconfig.json",
  "exclude": ["dist/**/*", "!dist/src/**/*"],
  "references": [{ "path": "../../packages/share-types" }],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "tsBuildInfoFile": null,
    "paths": {
      "@share-types/*": ["../../packages/share-types/dist/*"]
    }
  }
}
