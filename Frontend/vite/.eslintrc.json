{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["standard-with-typescript", "eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],

	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		// 0 = off, 1 = warn, 2 = error
		// https://eslint.org/docs/latest/use/configure/rules
		// https://github.com/typescript-eslint/typescript-eslint/tree/main/packages/eslint-plugin/docs/rules
		"@typescript-eslint/no-non-null-assertion": 0, // !演算子による null 式を許容する
		"@typescript-eslint/no-explicit-any": 0, // anyを許容する
		"@typescript-eslint/explicit-function-return-type": 0 // return のない関数を許容する（計算、加工などのみの用途があリウる）
	},
	"overrides": [
		// 特定ファイルのみ設定を変更する
		{
			// トリプルスラッシュはできるだけ使用不可
			"files": ["./src/vite-env.d.ts"],
			"rules": {
				"@typescript-eslint/triple-slash-reference": 0
			}
		}
	]
}
