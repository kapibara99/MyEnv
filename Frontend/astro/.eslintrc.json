{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true
	},
	"ignorePatterns": ["*.js.ts", "node_modules/*", "dist/*"], // js like なファイルをlint対象外にする
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:astro/recommended", "plugin:storybook/recommended", "eslint-config-prettier", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"globals": {
		"astroHTML": true
	},
	"overrides": [
		{
			"files": ["*.ts"],
			"parser": "@typescript-eslint/parser"
		},
		{
			"files": ["*.astro"],
			"parser": "astro-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser",
				"extraFileExtensions": [".astro"]
			}
		}
	],
	"rules": {
		// basic rules
		// https://eslint.org/docs/latest/use/configure/rules
		"no-console": "warn",
		"no-undef": "error",
		"no-unused-vars": "warn",
		"prefer-const": "error",
		"quotes": ["error", "single"],
		"max-len": ["error", 200],

		// https://typescript-eslint.io/rules/
		"@typescript-eslint/adjacent-overload-signatures": "error",

		// https://github.com/typescript-eslint/typescript-eslint/tree/main/packages/eslint-plugin/docs/rules
		// 0 = off, 1 = warn, 2 = error
		"@typescript-eslint/no-non-null-assertion": 0, // !演算子による null 式を許容する
		"@typescript-eslint/no-explicit-any": 1, // anyをwarningで許容する
		"@typescript-eslint/explicit-function-return-type": 0 // return のない関数を許容する（計算、加工などのみの用途があリウる）
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	}
}
