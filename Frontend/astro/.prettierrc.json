{
	"printWidth": 200,
	"tabWidth": 2,
	"useTabs": true,
	"singleQuote": true,
	"jsxSingleQuote": false,
	"singleAttributePerLine": false,
	"semi": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"arrowParens": "avoid",
	"endOfLine": "auto",
	"plugins": ["prettier-plugin-astro", "prettier-plugin-organize-imports"],
	"overrides": [
		{
			"files": "*.svg",
			"options": {
				"parser": "html"
			}
		},
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	],
	"astroAllowShorthand": true
}
